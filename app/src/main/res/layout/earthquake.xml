<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resource"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ripple_effect"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/showThePage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/magnitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/circle"
            android:textColor="#fff"
            android:text="4.8"/>

        <LinearLayout
            android:id="@+id/origin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:id="@+id/locationOffset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/textColorQuakeDescription"
                android:textAllCaps="true"
                android:maxLines="1"
                android:textSize="12sp"
                android:text="13 km N of"/>

            <TextView
                android:id="@+id/primaryLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorQuakeLocation"
                android:textStyle="bold"
                android:maxLines="2"
                android:textSize="16sp"
                android:text="Yelizovo, Russia"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reportTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorQuakeDescription"
                android:textSize="12sp"
                android:text="Mar 13 2016"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorQuakeDescription"
                android:textSize="12sp"
                android:text="9:15 am"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>